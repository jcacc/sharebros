[Unit]
Description=sharebro Discord bot
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=jca
WorkingDirectory=/home/jca/dev/python/sharebro
EnvironmentFile=/home/jca/dev/python/sharebro/.env
ExecStart=/usr/bin/python3 main.py
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
